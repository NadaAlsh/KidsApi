  @using KidsApi.Models.Entites
@model Reward

<div class="container-xxl flex-grow-1 container-p-y">
    <!-- Content -->
    <!-- Register -->
    <div class="card">
        <div class="card-body">
            <!-- /Logo -->
            <h4 class="mb-2 text-center">Rewards ðŸ¥³</h4>
            <p class="text-center">Let Your kids dashboard be more interested ðŸ§¸</p>
            <form id="formAuthentication" class="mb-3" action="@Url.Action("AddReward", "Rewards")" method="post">
                <div class="mb-3">
                    <label for="rewardtype" class="form-label">Rewards Type</label>
                    <input type="text" class="form-control" id="rewardtype" name="rewardtype" placeholder="" autofocus />
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <input type="text" class="form-control" id="description" name="description" placeholder="" autofocus />
                </div>
                <div class="mb-3">
                    <label for="requiredPoints" class="form-label">Required Points</label>
                    <input type="text" class="form-control" id="requiredPoints" name="requiredPoints" placeholder="" autofocus />
                </div>
                <div class="mb-3">
                    <label for="childId" class="form-label">Child Id</label>
                    <input type="text" class="form-control" id="childId" name="childId" placeholder="" autofocus />
                </div>

                <div class="text-center">
                    <button class="btn btn-sm btn-outline-primary" type="submit">Add Rewards</button>
                </div>
            </form>
        </div>
    </div>
</div>
