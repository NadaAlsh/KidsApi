@using KidsApi.Models.Responses
@model ChildAccountResponce

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class=" mb-2 "> @Model.Username</h4>

    <div class="card">

        <div class="card-body">
          <div class="row">
            <div class="col-9">
                </div>
                <div class="col-3">
                    <a href="/ParentDashBoard/EditChildDetails" class="btn btn-sm btn-outline-primary" onclick="toggleEditForm(@Model.Id)">Edit Profile</a>
                </div>
            </div>
             <div class="accordion-body">Username: @Model.Username</div>
             <div class="accordion-body">Baiti Account Number: @Model.BaitiAccountNumber  </div>
             <div class="accordion-body">Balance: @Model.SavingsAccountNumber </div>
             <div class="accordion-body">Points: @Model.Points</div>
        </div>

    </div>
    <br ></br>
    <div class="container-xxl flex-grow-1 container-p-y">
    <h4 class=" mb-2 "> Rewards</h4>
        <div class="row">
    @foreach (var reward in ViewBag.rewards)
    {
            <div class="col-6">
                <div class="card">

        <div class="card-body">
          

                <div class="accordion-body"> üåü @reward.RequiredPoints </div>
                <div class="accordion-body"> üß∏ @reward.RewardType     </div>
                <div class="accordion-body"> üìù @reward.Description    </div>


        </div>
                    </div>
                    <br><br />
    </div>
    <br>
    }
        </div>
    <br ><br />


    <h4 class=" mb-2 "> Tasks</h4>

        <div class="row">
    @foreach (var task in ViewBag.tasks)
    {

            <div class="col-6">
                <div class="card">

            <div class="card-body">

                            <div class="accordion-body">üåü @task.Description</div>

                    </div>
                       
                </div>
                    <br><br />
                </div>
        <br>
    }

        </div>
        


    <script>
        function toggleEditForm(childId) {
            var editForm = document.getElementById('editForm');
            var form = document.getElementById('formAuthentication');

            if (editForm.style.display === 'none') {
                // Set the form action with the child's ID
                form.action = '/ParentDashBoard/EditChildDetails/' + childId;
                editForm.style.display = 'block';
            } else {
                editForm.style.display = 'none';
            }
        }
    </script>

</div>
