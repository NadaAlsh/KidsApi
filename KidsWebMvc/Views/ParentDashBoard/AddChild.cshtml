@using KidsApi.Models.Requests
@model AddChildRequest
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <div class="card-body">
            <h4 class=" mb-2 text-center">Add Child  </h4>
            <form id="formAuthentication" class="mb-3" asp-action="AddChild" method="post">
                <div class="mb-3">
                    <label for="childUsername" class="form-label">Child Username </label>
                    <input type="text"
                           class="form-control"
                           id="username"
                           name="username"
                           placeholder="Enter your kid's name"
                           autofocus />
                </div>
                <div class="mb-3 form-password-toggle">
                    <div class="d-flex justify-content-between">
                        <label class="form-label" for="password">Password</label>
                    </div>
                    <div class="input-group input-group-merge">
                        <input type="password"
                               id="password"
                               class="form-control"
                               name="password"
                               placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                               aria-describedby="password" />
                        <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="baitiAccountNumber" class="form-label">Baiti Account Number</label>
                    <input type="text"
                           class="form-control"
                           id="baitiAccountNumber"
                           name="baitiAccountNumber"
                           placeholder="Child's Baiti account number"
                           autofocus />
                </div>
                <div class="mb-3">
                    <label for="savingsAccountNumber" class="form-label">Balance</label>
                    <input type="text"
                           class="form-control"
                           id="savingsAccountNumber"
                           name="savingsAccountNumber"
                           placeholder="Child's savings account number"
                           autofocus />
                </div>
                <div class="mb-3">
                    <label for="points" class="form-label">Points</label>
                    <input type="text"
                           class="form-control"
                           id="points"
                           name="points"
                           placeholder="Points"
                           autofocus />
                </div>

                <div class="text-center">
                    <button class="btn btn-sm btn-outline-primary" type="submit">Add Child</button>

                </div>
            </form>

        </div>
    </div>
</div>
      
